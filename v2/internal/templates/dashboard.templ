				if (store.headerState === 'none') {
					store.selectAll();
				} else {
					store.selectNone();
				}
			}

			function handleCheckboxClick(event, hostId) {
				event.stopPropagation();
				const store = Alpine.store('selection');
				if (event.shiftKey && store.lastSelected) {
					store.selectRange(hostId);
				} else {
					store.toggle(hostId);
				}
