			data-compartment="lock"
			data-status={ getLockStatus(host) }
			data-action={ getLockActionType(host) }
			onmouseenter="handleCompartmentHover(this)"
			onmouseleave="handleCompartmentLeave()"
			onclick="handleCompartmentClick(this)"
