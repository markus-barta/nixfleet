					handleStateMachineLog(detail) {
						// Map P2800 log levels to system log categories
						const levelMap = {
							'success': { category: 'success', icon: '‚úì' },
							'warning': { category: 'warning', icon: '‚ö†' },
							'error': { category: 'error', icon: '‚úó' },
							'info': { category: 'info', icon: '‚Ñπ' },
						};
						const mapping = levelMap[detail.level?.toLowerCase()] || levelMap.info;

						// Add to system log
						this.addSystemLog({
							category: mapping.category,
							message: `${detail.host_id}: ${detail.message}`,
							icon: mapping.icon,
						});

						// P4021: Also add to host's status history
						if (detail.host_id) {
							this.addStatusHistory(detail.host_id, mapping.category, mapping.icon, detail.message);
						}
					},

				switchTab(tabId) {
					this.activeTab = tabId;

					// Clear unread for host tabs
					if (tabId !== 'system') {
						const tab = this.tabs.find(t => t.hostId === tabId);
						if (tab) {
							tab.hasUnread = false;
							// Reset indicator if was 'unread'
							if (tab.indicator === 'unread') {
								tab.indicator = 'success';
							}
							
							// P3300: Restore output if tab is empty (first open after page load)
							if (tab.lines.length === 0 && !tab.outputRestored) {
								tab.outputRestored = true;
								this.restoreHostOutput(tabId);
							}
						}
					}

					// Scroll to bottom
					this.$nextTick(() => {
						const el = this.$refs.outputContent;
						if (el) el.scrollTop = el.scrollHeight;
					});
				},
				
				// P3300: Restore output from server when tab is opened
				async restoreHostOutput(hostId) {
					try {
						const resp = await fetch(`/api/hosts/${hostId}/output?lines=500`);
						if (!resp.ok) return;
						
						const content = await resp.text();
						if (!content) return;
						
						// Parse the output and add lines to the tab
						const lines = content.split('\n');
						lines.forEach(line => {
							if (line.trim()) {
								this.addLine(hostId, line, false);
							}
						});
						
						console.log(`[P3300] Restored ${lines.length} lines for ${hostId}`);
