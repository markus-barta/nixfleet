				const onlineHosts = hostStore.all().filter(h => h.online);
				if (onlineHosts.length === 0) {
					alert('No online hosts to send command to');
					return;
				}

				const confirmMsg = `Send "${command}" to ${onlineHosts.length} online host(s)?`;
