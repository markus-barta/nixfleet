			// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
			// CLICKABLE COMPARTMENTS (P1020)
			// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
			const compartmentCooldowns = new Map();
			const COOLDOWN_MS = 500;

			// P7300: Hover shows info description (no action preview)
			function handleCompartmentHover(btn) {
				const hostId = btn.dataset.hostId;
				const hostname = btn.dataset.hostname;
				const compartment = btn.dataset.compartment;
				const description = btn.dataset.description || '';

				// P7300: Compartments are info-only, show description in context bar
				// Map compartment to an info display (no action)
				window.dispatchEvent(new CustomEvent('action-preview', {
					detail: { hostId, hostname, command: 'info', compartment, description }
				}));
			}

			function handleCompartmentLeave() {
				window.dispatchEvent(new CustomEvent('action-clear'));
			}

			// P1100: Compartment click behavior per CORE-006 state machine
			// | State    | Color  | Click Action                         |
			// |----------|--------|--------------------------------------|
			// | unknown  | gray   | Show "checking..." or trigger check  |
			// | ok       | green  | Show detailed status (NO action)     |
			// | outdated | yellow | Trigger appropriate operation        |
			// | working  | blue   | Show progress, offer STOP            |
			// | error    | red    | Show error details, offer retry      |
			//
			// CRITICAL: System compartment is INFERENCE-ONLY - never triggers action
			function handleCompartmentClick(btn) {
				const hostId = btn.dataset.hostId;
				const hostname = btn.dataset.hostname;
				const compartment = btn.dataset.compartment;
				const description = btn.dataset.description || '';
				const status = btn.dataset.status || 'unknown';

				// Rate limiting (prevent spam clicks)
				const cooldownKey = `${hostId}-${compartment}`;
				if (compartmentCooldowns.has(cooldownKey)) return;

				compartmentCooldowns.set(cooldownKey, true);
				btn.classList.add('rate-limited');
				setTimeout(() => {
					compartmentCooldowns.delete(cooldownKey);
					btn.classList.remove('rate-limited');
				}, COOLDOWN_MS);

				// Always show log panel for all compartment clicks
				showLogPanel(hostId);

				// P1100: Handle WORKING state first - offer STOP for all compartments
				if (status === 'working') {
					appendLogLine(hostId, `üîµ ${compartment}: ${description || 'Operation in progress...'}`);
					showToast(`${compartment}: running - click STOP to cancel`, 'info');
					// Show STOP button in context bar
					window.dispatchEvent(new CustomEvent('show-stop-action', {
						detail: { hostId, hostname, compartment }
					}));
					return;
				}

				// P1100: Handle GREEN (ok) state - INFO ONLY, no action
				if (status === 'ok') {
					appendLogLine(hostId, `üü¢ ${compartment}: ${description || 'OK'}`);
					showToast(`${compartment}: ${description || 'OK'}`, 'success');
					return;
				}

				// P1100: System compartment is INFERENCE-ONLY per CORE-006
				// Status inferred from: Lock status + last command result
				// Click only shows info - NEVER triggers action
				if (compartment === 'system') {
					const statusEmoji = status === 'error' ? 'üî¥' : 
									   status === 'outdated' ? 'üü°' : '‚ö™';
					appendLogLine(hostId, `${statusEmoji} System: ${description || status}`);
					appendLogLine(hostId, `‚ÑπÔ∏è System status is inferred from Lock status and last command.`);
					if (status === 'outdated') {
						appendLogLine(hostId, `üí° To update: use Deploy menu or run Switch`);
					} else if (status === 'error') {
						appendLogLine(hostId, `üí° Last switch failed. Check logs, fix config, then retry.`);
					}
					showToast(`System: ${description || status}`, 
							  status === 'error' ? 'error' : 
							  status === 'outdated' ? 'warning' : 'info');
					return;
				}

				// P1100: Handle other states based on compartment type
				switch (compartment) {
					case 'agent':
						if (status === 'error') {
							// Agent outdated - show info, suggest action
							appendLogLine(hostId, `üî¥ Agent: ${description || 'Outdated'}`);
							appendLogLine(hostId, `üí° To update: Deploy ‚Üí Pull+Switch`);
							showToast(`Agent outdated - needs Pull+Switch`, 'error');
						} else {
							// Unknown or checking - run check-version
							appendLogLine(hostId, `üîç Checking agent version...`);
							showToast(`Agent: checking version...`, 'info');
							sendCommand(hostId, 'check-version');
						}
						break;

					case 'git':
						if (status === 'outdated') {
							// Git outdated - trigger refresh (lightweight dashboard-side)
							appendLogLine(hostId, `üü° Git: ${description || 'Behind remote'}`);
							appendLogLine(hostId, `üîÑ Refreshing git status...`);
							showToast(`Git: refreshing...`, 'info');
							triggerGitRefresh(hostId);
						} else if (status === 'error') {
							appendLogLine(hostId, `üî¥ Git: ${description || 'Error'}`);
							appendLogLine(hostId, `üîÑ Retrying refresh...`);
							showToast(`Git: retrying...`, 'warning');
							triggerGitRefresh(hostId);
						} else {
							// Unknown - trigger refresh to check
							appendLogLine(hostId, `‚ö™ Git: ${description || 'Checking...'}`);
							triggerGitRefresh(hostId);
						}
						break;

					case 'lock':
						if (status === 'outdated') {
							// Lock outdated - refresh status (lightweight agent check)
							appendLogLine(hostId, `üü° Lock: ${description || 'Outdated'}`);
							appendLogLine(hostId, `üîÑ Refreshing lock status...`);
							showToast(`Lock: ${description}`, 'warning');
							sendCommand(hostId, 'refresh-lock');
						} else if (status === 'error') {
							appendLogLine(hostId, `üî¥ Lock: ${description || 'Error'}`);
							appendLogLine(hostId, `üîÑ Retrying refresh...`);
							showToast(`Lock: retrying...`, 'warning');
							sendCommand(hostId, 'refresh-lock');
						} else {
							// Unknown - trigger refresh to check
							appendLogLine(hostId, `‚ö™ Lock: ${description || 'Checking...'}`);
							sendCommand(hostId, 'refresh-lock');
						}
						break;

					case 'tests':
						if (status === 'outdated' || status === 'error') {
							// Tests not run yet OR failed - run/retry them
							const statusEmoji = status === 'error' ? 'üî¥' : 'üü°';
							const action = status === 'error' ? 'Retrying' : 'Running';
							appendLogLine(hostId, `${statusEmoji} Tests: ${description || status}`);
							appendLogLine(hostId, `üß™ ${action} tests...`);
							showToast(`Tests: ${action.toLowerCase()}...`, 'info');
							sendCommand(hostId, 'test');
						} else {
							// Unknown - show info, don't run automatically
							appendLogLine(hostId, `‚ö™ Tests: ${description || 'Not configured'}`);
							appendLogLine(hostId, `‚ÑπÔ∏è Configure tests in hosts/<hostname>/tests/ to enable`);
							showToast(`Tests: ${description || 'not configured'}`, 'info');
						}
						break;

					default:
						showToast(`Unknown compartment: ${compartment}`, 'error');
				}
			}

			// P1100: Git refresh helper (dashboard-side API call)
			function triggerGitRefresh(hostId) {
				window.dispatchEvent(new CustomEvent('output-start', {
					detail: { hostId, command: 'refresh-git' }
				}));

				fetch(`/api/hosts/${hostId}/refresh-git`, {
					method: 'POST',
					headers: { 'X-CSRF-Token': CSRF_TOKEN }
				}).then(resp => {
					if (!resp.ok) throw new Error('Failed to refresh git status');
					return resp.json();
				}).then(data => {
					const msg = `Git: ${data.status} - ${data.message}`;
					appendLogLine(hostId, `‚úì ${msg}`);
					showToast(msg, data.status === 'ok' ? 'success' : 'warning');
					refreshHost(hostId);
					window.dispatchEvent(new CustomEvent('log-complete', {
						detail: { host_id: hostId, command: 'refresh-git', exit_code: 0 }
					}));
				}).catch(err => {
					appendLogLine(hostId, `‚úó ${err.message}`, 'error');
					showToast(`Git: ${err.message}`, 'error');
					window.dispatchEvent(new CustomEvent('log-complete', {
						detail: { host_id: hostId, command: 'refresh-git', exit_code: 1, error: err.message }
					}));
				});
			}

			function showToast(message, type = 'info') {
				const existing = document.querySelector('.toast');
				if (existing) existing.remove();

				const toast = document.createElement('div');
				toast.className = `toast toast-${type}`;
				toast.textContent = message;
				document.body.appendChild(toast);

				requestAnimationFrame(() => toast.classList.add('show'));

				setTimeout(() => {
					toast.classList.remove('show');
					setTimeout(() => toast.remove(), 300);
				}, 3000);
			}

			// P1060: Clipboard utility
			async function copyToClipboard(text, message) {
